<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".EditedLookup"
    >

    <include layout="@layout/toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp">

        <ImageView
            android:id="@+id/imagemain4"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            android:layout_alignStart="@+id/previous_button"
            android:layout_alignLeft="@+id/previous_button"
            android:layout_alignEnd="@+id/next_button"
            android:layout_alignRight="@+id/next_button"
            android:layout_marginStart="-50dp"
            android:layout_marginLeft="-50dp"
            android:layout_marginEnd="-49dp"
            android:layout_marginRight="-49dp"
            android:contentDescription="TODO"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="이전"
            android:textSize="17dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="다음"
            android:textSize="17dp" />


    </RelativeLayout>

</LinearLayout>
